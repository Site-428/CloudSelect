<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>

    <div class="col-sm-10">

      <div class="panel panel-primary filterable">
        <div class="panel-heading">
          <% if teacher_logged_in? %><h3 class="panel-title">评估结果</h3><% end %>
          <% if student_logged_in? %><h3 class="panel-title">主机评估</h3><% end %>
        </div>

        <div class="panel-body">
          <table class="table table-responsive table-condensed table-hover">
            <thead>
            <tr>
              <th>主机编号</th>
              <th>主机名称</th>
              <th>实例（核/G）</th>
              <th>主要软件</th>
              <th>负责教师</th>
              <th>操作区</th>
            </tr>

            <tbody>
            <% @comments.each do |comment| %>
                <tr>
                  <td><%= comment.course.course_code %></td>
                  <td><%= comment.course.name %></td>
                  <td><%= comment.course.credit %></td>
                  <td><%= comment.course.exam_type %></td>
                  <td><%= comment.course.teacher.name %></td>
                  <%if comment.commented?%>
                      <td><%= link_to "修改评估", edit_comment_url(comment), class: 'btn btn-xs btn-info' %></td>
                  <% end %>
                   <%if !comment.commented?%>
                      <td><%= link_to "评估", edit_comment_url(comment), class: 'btn-sm btn-danger' %></td>
                  <% end %>
                </tr>
            <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>