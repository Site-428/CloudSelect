<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">评估主机:<%=@comment.course.name%></h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-bordered table-advance table-hover">
            当前评估主机：<label style="color:red;"><%=@comment.course.name%></label>&nbsp&nbsp&nbsp负责教师：<lable style="color:red;"><%=@comment.course.teacher.name%></lable>&nbsp&nbsp&nbsp&nbsp所属院系：<lable style="color:red;"><%=@comment.course.teacher.department%></lable>
