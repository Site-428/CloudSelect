<%= form_for @course, html: {class: 'form-horizontal', role: 'form'} do |f| %>
    <%= render 'shared/error_messages', :object => @course %>

    <div class="form-group">
      <%= f.label "主机名", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :name, class: 'form-control', placeholder: "输入主机名" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "主机编号", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :course_code, class: 'form-control', placeholder: "输入主机编号" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "操作系统", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :course_type, class: 'form-control', placeholder: "windows/linux，注意大小写" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "连接方式", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :teaching_type, class: 'form-control', placeholder: "输入连接方式" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "主要软件", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :exam_type, class: 'form-control', placeholder: "输入主要软件" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "限制连接数", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :limit_num, class: 'form-control', placeholder: "限制连接数" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "实例", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :credit, class: 'form-control', placeholder: "核/G" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "ID", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :course_week, class: 'form-control', placeholder: "输入连接ID" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "密钥", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :class_room, class: 'form-control', placeholder: "输入连接密钥" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "开放时间", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :course_time, class: 'form-control', placeholder: "例：周四(1-4)，括号用英文" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "所属院系", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>

          <%=f.select(:semester_id) do %>
              <span class= "form-control" >
            <% Semester.all.each do |c| -%>

                <%= content_tag(:option, c.info, value:c.id )  %>
                    </span>
            <% end %>
        <% end %>
        
        </div>
      </div>
    </div>




    <%= f.submit '提交', class: "btn btn-success btn-block" %>
    <%= link_to '取消', courses_path, :class => "btn btn-default btn-block" %>

<% end %>
